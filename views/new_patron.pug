doctype html
html
  head
    title New Patron
    link(rel='stylesheet', href='stylesheets/style.css')
  body
    include includes/errors
    include nav.pug
    h1 New Patron
    form(action='/create_patron' method='POST')
      p
        label(for='first_name') First Name
        input#first_name(type='text' name='first_name')
      p
        label(for='last_name') Last Name
        input#last_name(type='text' name='last_name')
      p
        label(for='address')  Address
        input#address(type='text' name='address')
      p
        label(for='email') Email
        input#email(type='text' name='email')
      p
        label(for='library_id') Library ID
        input#library_id(type='text' name='library_id')
      p
        label(for='zip_code') Zip Code
        input#zip_code(type='text' name='zip')
      p
        input(type='submit', value='Create New Patron')
